
@{
    Layout = null;
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<div id="fullscreen_bg" class="fullscreen_bg" />
<form class="form-signin" action="/Login/Uyeol" method="post">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h3 class="text-center">
                            Kullanıcı Kayıt İşlemleri
                        </h3>
                        <form class="form form-signup" role="form">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-user"></span>
                                    </span>
                                    <input type="text" class="form-control" placeholder="Adı" required="required" name="adi" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                    <input type="text" class="form-control" placeholder="Soyadı" required="required" name="soyadi" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                                    <input type="text" class="form-control" placeholder="Email" required="required" name="email"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                                    <input type="password" class="form-control" placeholder="Password" required="required" name="sifre" />
                                </div>
                            </div>



                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                    <input type="number" class="form-control" placeholder="Ev Tel" name="evtel" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-credit-card"></span></span>
                                    <input type="number" class="form-control" placeholder="Cep tel" required="required" name="ceptel" />
                                </div>
                            </div>


                    </div>
                    <div></div>
                    <div style="color:red;">@ViewBag.mesaj</div>
                    <div style="color:forestgreen;">@ViewBag.success</div>

                    <input class="btn btn-sm btn-primary btn-block" role="button" type="submit" name="name" value="Kaydet" />

                    @if (ViewBag.success != null)
                    {
                        <br />
                        <br />
                        
                        <input onclick="window.location.href='/Login';" class="btn btn-sm btn-success btn-block" role="button" type="button" name="name" value="Giriş Yap" />
                    }

                </div>
            </div>
        </div>
        </div>
    
</form>
        