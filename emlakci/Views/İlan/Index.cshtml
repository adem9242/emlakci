
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Tüm İlanlar</h2>

@using emlakci.Models;
@model List<EMLAKLAR>

<div class="col-md-12">
    <div class="panel-primary filterable">
        <div class="panel-heading">

            <table class="table table-striped">
                <thead class="bg-info">
                    <tr>

                        <th> <button style="background-color:lavender;color:cadetblue;" class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span>FİLTRELE</button></th>

                        <th>
                            <div style="float:right; margin-top:1em;" class="col-md-3 mb-3">
                                <select style="cursor:pointer;" class="form-control form-control-sm" name="category" id="siralama" onchange="ChangecatList()" required>
                                    <option value="0">Gelişmiş Sırılama </option>
                                    <option value="1">Fiyata göre(Önce en yüksek)</option>
                                    <option value="2">Fiyata göre(Önce en düşük)</option>
                                    <option value="3">Tarihe göre (Önce en yeni ilan)</option>
                                    <option value="4">Tarihe göre (Önce en eski ilan)</option>
                                    <option value="5">Adrese göre (A - Z)</option>
                                    <option value="6">Adrese göre (Z - A)</option>



                                </select>
                            </div>
                        </th>




                    </tr>
                </thead>

            </table>
        </div>


        <table border="1" style="cursor:pointer;" class="table table-bordered table-hover table-sortable">
            <thead style="background-color:cadetblue;">
                <tr class="filters">
                    <th><input type="text" class="form-control" placeholder="#" disabled></th>
                    <th><input type="text" class="form-control" placeholder="Emlak Tipi" disabled></th>
                    <th><input type="text" class="form-control" placeholder="İlan Başlığı" disabled></th>
                    <th><input type="text" class="form-control" placeholder="m² (Brüt)" disabled></th>
                    <th><input type="text" class="form-control" placeholder="Oda Sayısı" disabled></th>
                    <th><input type="text" class="form-control" placeholder="Fiyat" disabled></th>
                    <th><input type="text" class="form-control" placeholder="İlan Tarihi" disabled></th>
                    <th data-defaultsign="AZ"><input type="text" class="form-control" placeholder="Şehir" disabled></th>
                </tr>
                @*<tr>

                        <th>Emlak Tipi</th>
                        <th>İlan Başlığı</th>
                        <th>m² (Brüt)</th>
                        <th> Oda Sayısı</th>
                        <th>Fiyat</th>
                        <th>İlan tarihi</th>
                        <th>Şehir</th>
                    </tr>*@
            </thead>
            <tbody>

                @foreach (EMLAKLAR item in Model)
                {
                    <tr>

                        <td>@item.ID</td>
                        <td>@item.ILAN_KATEGORISI</td>
                        <td>@item.ILAN_BASLIGI</td>
                        <td>@item.BURUT_METREKARE</td>
                        <td>@item.ODA_SAYISI+@item.SALON_SAYISI</td>
                        <td>@item.FIYAT</td>
                        <td>@item.ILAN_TARIHI</td>
                        <td>@item.ILLER.ILADI</td>
                    </tr>
                }


            </tbody>
        </table>
    </div>

</div>




